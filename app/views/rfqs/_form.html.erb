<%= form_for(@rfq) do |f| %>
  <% if @rfq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rfq.errors.count, "error") %> prohibited this rfq from being saved:</h2>
      <ul>
      <% @rfq.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :status, :for => "xlInput" %>
     <div class="input">
      <%= f.text_field :status %>
    </div>
  </div> 

  <div class="clearfix">
    <%= f.label :notes, :for => "xlInput" %>
     <div class="input">
      <%= f.text_area :notes, :rows => '3', :class => 'xxlarge' %>
    </div>
  </div>

  <div class="clearfix">
    <div class="row">
      <div class="span16">
        <div class="span1">Line #</div>
        <div class="span2">Part #</div>
        <div class="span2">NSN</div>
        <div class="span6">Description</div>
        <div class="span1">CC</div>
        <div class="span1">Quantity</div>
        <div class="span1">&nbsp</div>
      </div>
    </div> 
    <%= f.fields_for :rfq_lines do |rfq_line_form| %>
      <%= render "rfq_line_fields", :f => rfq_line_form %>
    <% end %>
    <div class="row">
      <div class="span16">
        <%= link_to_add_fields "Add RFQ Line", f, :rfq_lines %>
      </div>
    </div>
  </div>


  <div class="clearfix">
    <div class="input">
      <%= f.submit "Submit", :class =>"btn small primary" %>
    </div>
  </div>

<% end %>
